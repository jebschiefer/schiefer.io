{
  "name": "score_keeper",
  "version": "1.0.0",
  "description": "Score keeping site for various games",
  "repository": {
    "type": "git",
    "url": "https://github.com/jebschiefer/score_keeper.git"
  },
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run compile && npm run copy-files",
    "clean": "rm -rf ./dist",
    "compile": "tsc",
    "copy-files": "copyfiles --up 1 'src/views/**/*' 'src/public/**/*' dist",
    "start": "run-s compile copy-files start:watch",
    "start:watch": "run-p -l watch:*",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch:compile": "tsc --watch",
    "watch:node": "nodemon ./dist/index.js",
    "watch:files": "watch 'npm run copy-files' ./src/views"
  },
  "author": "Jeb Schiefer",
  "license": "ISC",
  "dependencies": {
    "body-parser": "1.17.2",
    "copyfiles": "1.2.0",
    "dotenv": "4.0.0",
    "express": "4.15.3",
    "express-hbs": "1.0.4",
    "express-session": "1.15.4",
    "firebase-admin": "5.0.1",
    "nodemon": "1.11.0",
    "npm-run-all": "4.0.2",
    "serve-favicon": "2.4.3",
    "serve-static": "1.12.3",
    "typescript": "2.4.2",
    "watch": "1.0.2",
    "winston": "2.3.1"
  },
  "devDependencies": {
    "@types/dotenv": "4.0.0",
    "@types/express": "4.0.36",
    "@types/express-session": "1.15.1",
    "@types/node": "8.0.14",
    "@types/winston": "2.3.3"
  }
}
