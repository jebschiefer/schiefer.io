<h1>Add a new game</h1>

<form method="post" action="/game/add">
    <div class="form-group">
        <label>Name of game</label>
        <input name="game" type="text" class="form-control" placeholder="Enter game name" required>
    </div>

    <div class="form-group">
        <label>Add winner</label>
        <input name="winner" type="text" class="form-control" placeholder="Winner's name" required>
    </div>

    <div id="players-list">
        <label>Add other players</label>
        <div class="form-group">
            <input name="players" type="text" class="form-control" placeholder="Player's name" required>
        </div>
    </div>

    <div class="form-group">
        <button id="add-player" class="btn btn-secondary btn-sm">+ Add Player</button>
    </div>

    <button type="submit" class="btn btn-primary">Save new game</button>
</form>
