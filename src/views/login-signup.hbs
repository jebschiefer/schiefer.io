<h2>
    {{#if isLogin}}Log in{{else}}Sign up{{/if}}
</h2>

<form method="post" action="{{ formAction }}">
    <div class="form-group">
        <label for="username">Username</label>
        <input id="username" name="username" type="text" class="form-control" placeholder="Enter userame">
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input id="password" name="password" type="password" class="form-control" placeholder="Enter password">
    </div>

    <button type="submit" class="btn btn-primary">{{#if isLogin}}Log in{{else}}Sign up{{/if}}</button>

    {{#if isLogin}}
    <a href="/signup">Sign up</a>
    {{/if}}
</form>
